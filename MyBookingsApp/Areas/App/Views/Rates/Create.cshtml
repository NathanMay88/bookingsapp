            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    
    <script type="text/javascript">
        
            $('#availabledays-dropdown').multiselect({
                includeSelectAllOption: true
            });
    </script>

