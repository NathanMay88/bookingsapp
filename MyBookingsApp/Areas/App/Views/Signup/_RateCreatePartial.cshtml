@model MyBookingsApp.Areas.App.Models.SignupRateViewModel
@using (Ajax.BeginForm("CreateRatePost", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "SuccessAjaxRate" }))
{
    @Html.AntiForgeryToken()
    <tr id="new-rate">
        <td>
            @Html.EditorFor(model => Model.RateName, new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.TextBoxFor(model => model.StopSellTime, new { @class = "form-control text-box single-line", @id = "datetimepicker3" })
        </td>
        <td>
            @Html.EditorFor(model => model.ClosedToArrival, new { htmlAttributes = new { @class = "form-control" } })
        </td>
        <td>
            @Html.DropDownListFor(model => model.SelectedDays, Model.SelectedDays, new { @id = "selecteddays-dropdown", @multiple = "true" })
        </td>
        <td>
            <input type="submit" value="Add" class="btn btn-primary" />
        </td>
    </tr>
}