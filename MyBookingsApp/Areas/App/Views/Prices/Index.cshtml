@model MyBookingsApp.Areas.App.Models.Management.PriceListViewModel

@{
    ViewBag.Title = "Pricing";
}

<h2>Pricing</h2>

@using (Html.BeginForm("Index", "Prices"))
{



    
        <section class="options row">
            @for (int i = 0; i < Model.GroupedPriceList.Count; i++)
            {
                @Html.HiddenFor(a => a.GroupedPriceList[i].RoomTypeID)
            }
            @*Options will be rendered in Partial*@
            @Html.EditorFor(a => a.PriceOptions.StartDate, new { htmlAttributes = new { @class = "datepicker form-control col-md-3" } })
            @Html.EditorFor(a => a.PriceOptions.EndDate, new { htmlAttributes = new { @class = "datepicker form-control col-md-3" } })
            @Html.DropDownListFor(a=>a.SelectedRateID, Model.PriceOptions.RateList, new { @class= "form-control col-md-3" })

        </section>

        <section class="pricing-grid col-lg-12 hidden-xs">
            <table class="table">
                <thead>
                    <tr>
                        <td>Date</td>
                        @for (int i = 0; i <= Model.GroupedPriceList.Count - 1; i++)
                        {
                            <td colspan="3">@(Model.GroupedPriceList[i].RoomTypeName) </td>
                            @Html.HiddenFor(a => a.GroupedPriceList[i].RoomTypeID)
                            @Html.HiddenFor(a => a.GroupedPriceList[i].RateID)
                        }
                    </tr>
                    <tr>
                        <td> </td>
                        @for (int i = 0; i <= Model.GroupedPriceList.Count - 1; i++)
                        {
                            <td>Price</td>
                            <td>Minimum Stay</td>
                            <td>Stop/Sell</td>
                        }
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i <= Model.GroupedPriceList.First().PriceList.Count - 1; i++)
                    {

                        <tr>
                            <td>@(Model.GroupedPriceList.First().PriceList[i].Date.ToShortDateString())</td>
                            @for (int j = 0; j <= Model.GroupedPriceList.Count - 1; j++)
                            {
                                <td>
                                    @Html.EditorFor(a => a.GroupedPriceList[j].PriceList[i].Price, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.HiddenFor(a => a.GroupedPriceList[j].PriceList[i].Date)
                                </td>
                                <td>
                                    @Html.EditorFor(a => a.GroupedPriceList[j].PriceList[i].MinimumStay, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                                <td>
                                    @Html.CheckBoxFor(a => a.GroupedPriceList[j].PriceList[i].StopSell, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <input type="submit" class="btn btn-lg" value="Save" />

        </section>

        <section class="availability-grid-phone col-xs-12 hidden-sm"></section>


    @section scripts{

        <script>
            jQuery('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
            });
        </script>
    }
}